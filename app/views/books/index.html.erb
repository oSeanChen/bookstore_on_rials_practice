<%= flash[:notice] %>

<h1>我的書店</h1>

<%= link_to "新增書本", new_book_path %> 


<table>
  <tr>
    <td>書名</td>
    <td>介紹</td>
    <td>價錢</td>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.content %></td>
    <td><%= book.price %></td>
    <td><%= link_to "編輯", edit_book_path(book.id) %></td>
    <td><%= link_to "刪除", book_path(book.id), method:"delete", data: {confirm: "Are you sure?!"} %></td>

  </tr>
  <% end %>
</table>